#pure php
<VirtualHost *:80>
        ServerName pusername
        ServerAlias *.username
        VirtualDocumentRoot /var/www/%0/
        Include /etc/apache2/sites.conf
</VirtualHost>

#zend
<VirtualHost *:80>
        ServerName zusername
        ServerAlias *.zusername
        VirtualDocumentRoot /var/www/%0/public/
	Include /etc/apache2/sites.conf
</VirtualHost>